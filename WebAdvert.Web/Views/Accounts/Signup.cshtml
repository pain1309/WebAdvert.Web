@model WebAdvert.Web.Models.Accounts.SignupModel

<div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-6">
        <div class="col-md-12">
            <form method="POST">
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="Email" required>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="Password" required>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" required>
                </div>
                <button class="btn btn-primary" type="submit">Signup</button>
            </form>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <a asp-action="Login">Login</a>
                </div>
                <div class="col-md-6">
                    <a asp-action="ForgotPassword">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
</div>