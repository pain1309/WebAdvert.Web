@model WebAdvert.Web.Models.Accounts.ConfirmForgotPasswordModel

@{
    var userId = TempData["UserId"];
    var email = TempData["EmailAddress"];
}

<div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-6">
        <div class="col-md-12">
            <form method="POST">
                <div class="form-group">
                    <label asp-for="Email" class="form-label">EmailAddress</label>
                    <input class="form-control" asp-for="Email" required>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmationCode" class="form-label">ConfirmationCode</label>
                    <input class="form-control" asp-for="ConfirmationCode" required>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input class="form-control" asp-for="Password" required>
                </div>
                <button class="btn btn-primary" type="submit">Complete Reset Password</button>
            </form>
        </div>
    </div>
</div>